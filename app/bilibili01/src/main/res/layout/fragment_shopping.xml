<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.shopping.ShoppingFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="11.1"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.1"
                android:orientation="horizontal"
                android:weightSum="6.5"
                >
                <androidx.legacy.widget.Space
                    android:layout_width="0dp"
                    android:layout_weight="2.4"
                    android:layout_height="match_parent"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.7"
                    android:layout_height="match_parent"
                    android:text="会员购"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="0.8"
                    android:layout_height="match_parent"
                    android:src="@mipmap/favorties"
                    android:scaleType="center"
                    />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="0.8"
                    android:layout_height="match_parent"
                    android:src="@mipmap/shopping_cart"
                    android:scaleType="centerCrop"
                    android:padding="22dp"
                    />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="0.8"
                    android:layout_height="match_parent"
                    android:src="@mipmap/self"
                    android:scaleType="center"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:orientation="vertical"
                >
                <com.example.bilibili01.ui.shopping.HeaderGridView
                    android:id="@+id/shopping_grid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:numColumns="2"
                    />
            </LinearLayout>
        </LinearLayout>
        <include layout="@layout/fragment_style"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>